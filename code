//Implementing Linked Lists using structures

#include <stdio.h>
#include <stdlib.h>

struct node  //struct node to hold data and a pointer.
{
	int data;
	struct node *next;

};

int main()
{
	struct node *newnode1, *newnode2, *newnode3;
	
	newnode1 = (struct node*) malloc(sizeof(struct node)); 
	newnode2 = (struct node*) malloc(sizeof(struct node));
	newnode3 = (struct node*) malloc(sizeof(struct node));
	
	newnode1 -> data = 10;  // newnode1 accessing the data variable of struct node.
	newnode1 -> next = newnode2; // Address of next node stored in variable next of struct node.
	
	newnode2 -> data = 20;
	newnode2 -> next = newnode3;
	
	newnode3 -> data = 30;
	newnode3 -> next = NULL;
	
	printf("data 1: %d selfaddr 1: %d nextaddr 1: %d\n", newnode1 -> data, newnode1, newnode1 -> next);
	printf("data 2: %d selfaddr 2: %d nextaddr 2: %d\n", newnode2 -> data, newnode2, newnode2 -> next);
	printf("data 3: %d selfaddr 3: %d nextaddr 3: %d\n", newnode3 -> data, newnode3, newnode3 -> next);

}
